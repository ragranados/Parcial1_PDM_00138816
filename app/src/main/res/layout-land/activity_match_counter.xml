<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".activitys.MatchCounter">


    <LinearLayout
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView

            android:textColor="@color/color_texto"
            android:textSize="0dp"
            android:id="@+id/titulo_partido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..." />

    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/color_texto"
                android:textSize="@dimen/subtitittle"
                android:id="@+id/equipo_uno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/color_texto"
                android:id="@+id/puntaje_equipo_uno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/textos" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:textColor="@color/color_texto"
                    android:id="@+id/bAgregarUnoEUno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/item"
                    android:text="Add 1" />

                <Button
                    android:textColor="@color/color_texto"
                    android:layout_marginVertical="8dp"
                    android:id="@+id/bAgregarDosEUno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/item"
                    android:text="Add 2" />

                <Button
                    android:textColor="@color/color_texto"
                    android:id="@+id/bAgregarTresEUno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/item"
                    android:text="Add 3" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/color_texto"
                android:textSize="@dimen/subtitittle"
                android:id="@+id/equipo_dos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/color_texto"
                android:id="@+id/puntaje_equipo_dos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/textos" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:textColor="@color/color_texto"
                    android:id="@+id/bAgregarUnoEDos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/item"
                    android:text="Add 1" />

                <Button
                    android:textColor="@color/color_texto"
                    android:layout_marginVertical="8dp"
                    android:id="@+id/bAgregarDosEDos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/item"
                    android:text="Add 2" />

                <Button
                    android:textColor="@color/color_texto"
                    android:id="@+id/bAgregarTresEDos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/item"
                    android:text="Add 3" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:textColor="@color/color_texto"
        android:layout_marginTop="15dp"
        android:id="@+id/boton_finalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/item"
        android:text="Finalizar" />


</LinearLayout>