<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back_ground"
    android:layout_height="match_parent"
    tools:context=".activitys.New_match">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nuevo_partido" />

        <EditText
            android:id="@+id/nombre_equipo_uno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombre_equipo_1" />

        <EditText
            android:id="@+id/nombre_equipo_dos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombre_equipo_2" />

        <Button
            android:background="@color/item"
            android:id="@+id/boton_crear_partido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear" />


    </LinearLayout>

</LinearLayout>