<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".activitys.MatchCounter">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola vs hola" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/equipo_uno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/puntaje_equipo_uno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bAgregarUnoEUno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add 1" />

                <Button
                    android:id="@+id/bAgregarDosEUno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add 2" />

                <Button
                    android:id="@+id/bAgregarTresEUno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add 3" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/equipo_dos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/puntaje_equipo_dos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bAgregarUnoEDos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add 1" />

                <Button
                    android:id="@+id/bAgregarDosEDos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add 2" />

                <Button
                    android:id="@+id/bAgregarTresEDos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add 3" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:id="@+id/boton_finalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar"/>


</LinearLayout>